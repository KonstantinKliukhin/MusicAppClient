{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "allowJs": false,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@entities/*": [
        "old/types/entities/*"
      ],
      "@commonTypes/*": [
        "old/types/common/*"
      ],
      "@uiComponents/*": [
        "old/components/ui/*"
      ],
      "@bzComponents/*": [
        "old/components/business/*"
      ],
      "@pageComponents/*": [
        "old/components/pages/*"
      ],
      "@services/*": [
        "old/services/*"
      ],
      "@hooks/*": [
        "old/hooks/*"
      ],
      "@images/*": [
        "assets/images/*"
      ],
      "@utils": [
        "old/shared/utils"
      ],
      "@constants": [
        "old/shared/constants"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
